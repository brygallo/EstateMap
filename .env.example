# ============================================================================
# ESTATE MAP - CONFIGURACIÓN DE ENTORNO
# ============================================================================
# Copia este archivo como .env y completa con tus valores
# IMPORTANTE: NUNCA subas el archivo .env a git
# ============================================================================

# ============================================================================
# BASE DE DATOS - PostgreSQL
# ============================================================================
# Variables para el contenedor de PostgreSQL
POSTGRES_DB=estatedb
POSTGRES_USER=estateuser
POSTGRES_PASSWORD=estatepass

# Variables para Django (conexión desde backend)
DB_NAME=estatedb
DB_USER=estateuser
DB_PASSWORD=estatepass
DB_HOST=db
DB_PORT=5432

# Para desarrollo local fuera de Docker, usar:
# DB_HOST=localhost

# Para conectar desde host a contenedor Docker:
# DB_HOST=host.docker.internal

# ============================================================================
# DJANGO - Configuración General
# ============================================================================
# Clave secreta de Django (CAMBIAR EN PRODUCCIÓN)
# Genera una nueva: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=changeme-use-a-long-random-secret-key-in-production

# Modo debug (SOLO True en desarrollo, False en producción)
DEBUG=True

# Hosts permitidos (separados por coma)
# Desarrollo: *
# Producción: tudominio.com,www.tudominio.com
ALLOWED_HOSTS=*

# ============================================================================
# FRONTEND - Vite/React
# ============================================================================
# URL del API backend
VITE_API_URL=http://localhost:8000/api

# API Key de MapTiler (para los mapas)
# Obtener gratis en: https://cloud.maptiler.com/
VITE_MAPTILER_KEY=your_maptiler_key_here

# ============================================================================
# MINIO - Almacenamiento de Archivos
# ============================================================================
# Credenciales de root para MinIO (usuario/contraseña del panel de administración)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Endpoint interno (para conexión desde backend)
# Docker: minio:9000
# Local: localhost:9000
MINIO_ENDPOINT=minio:9000

# Endpoint público (para acceso desde el navegador)
# Desarrollo: localhost:9000
# Producción: minio.tudominio.com
MINIO_PUBLIC_ENDPOINT=localhost:9000

# Credenciales de acceso para la aplicación
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Nombre del bucket donde se guardan los archivos
MINIO_BUCKET_NAME=estatemap

# Usar SSL/TLS (False en desarrollo, True en producción)
MINIO_USE_SSL=False

# ============================================================================
# EMAIL - Configuración de Correo Electrónico
# ============================================================================
# Backend de email
# Desarrollo: django.core.mail.backends.console.EmailBackend (imprime en consola)
# Producción: django.core.mail.backends.smtp.EmailBackend (envía emails reales)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# --- Configuración SMTP (solo para producción) ---

# OPCIÓN 1: Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contraseña-de-aplicación

# Cómo obtener contraseña de aplicación de Gmail:
# 1. Ve a https://myaccount.google.com/security
# 2. Activa la verificación en 2 pasos
# 3. Ve a https://myaccount.google.com/apppasswords
# 4. Selecciona "Correo" y "Otro (nombre personalizado)"
# 5. Copia la contraseña generada y úsala aquí

# OPCIÓN 2: SendGrid (alternativa)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=SG.tu-api-key-aqui

# OPCIÓN 3: Mailgun (alternativa)
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=postmaster@tudominio.mailgun.org
# EMAIL_HOST_PASSWORD=tu-contraseña-mailgun

# OPCIÓN 4: Amazon SES (alternativa)
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-access-key-id
# EMAIL_HOST_PASSWORD=tu-secret-access-key

# OPCIÓN 5: Office 365 (alternativa)
# EMAIL_HOST=smtp.office365.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-email@tuempresa.com
# EMAIL_HOST_PASSWORD=tu-contraseña

# Email remitente (aparece en el campo "De:")
DEFAULT_FROM_EMAIL=noreply@geopropiedadesecuador.com

# ============================================================================
# FRONTEND URL - Para Links en Emails
# ============================================================================
# URL del frontend (usada para generar links en emails)
# Desarrollo: http://localhost:5173
# Producción: https://tudominio.com (sin slash al final)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# AUTENTICACIÓN - Tiempos de Expiración
# ============================================================================
# Minutos de validez para códigos de verificación de email
EMAIL_VERIFICATION_CODE_EXPIRY_MINUTES=30

# Horas de validez para tokens de reset de contraseña
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=24

